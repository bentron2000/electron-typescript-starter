{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["es2019", "DOM", "DOM.Iterable"],
    //"strict": true,
    "pretty": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@redux": ["src/redux"],
      "@redux/*": ["src/redux/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@backend": ["src/backend"],
      "@backend/*": ["src/backend/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@static": ["static"],
      "@static/*": ["static/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "typings/**/*.ts"],
  "exclude": ["node_modules", "build", "dist"],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["src/**/*.{ts,tsx}"]
  }
}
